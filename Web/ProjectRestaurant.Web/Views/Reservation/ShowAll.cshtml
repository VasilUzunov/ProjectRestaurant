@{
    this.ViewData["Title"] = "Your Reservations";
}
<section id="heroAllReservation" class="flex-fill d-flex align-items-center">
    <div class="container position-relative text-center text-lg-left " data-aos="zoom-in" data-aos-delay="100">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="text-center">@this.ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</section>
<div class="container" style="padding-bottom: 70px">
    <div>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col" class="text-center all-reservations">#</th>
                    <th scope="col" class="text-center all-reservations">Table Number</th>
                    <th scope="col" class="text-center all-reservations">Number Of People</th>
                    <th scope="col" class="text-center all-reservations">Date And Time Of Reservation</th>
                    <th scope="col" class="text-center all-reservations">Message</th>
                    <th scope="col" class="text-center all-reservations">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 0;
                    @foreach (var reservation in Model)
                    {
                        count++;
                <tr>
                    <th scope="row">@count</th>
                    <td class="text-center">@reservation.TableTableNumber</td>
                    <td class="text-center">@reservation.NumberOfPeople</td>
                    <td class="text-center">@reservation.DateAndTimeOfReservationInString</td>
                    <td class="text-center">@reservation.Message</td>
                    <td class="text-center">
                        <ul style="padding-left: 0">
                            <li class="nav-link">Edit</li>
                            <li class="nav-link">Delete</li>
                        </ul>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>